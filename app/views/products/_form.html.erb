<%= form_with(model: product, local: true, html: { multipart: true }) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Nombre", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label "Descripción", style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label "Precio", style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div class="form-group">
    <%= form.label :images, "Imágenes del producto" %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>


  <br>
  <div>
    <%= form.submit "Crear", class: "btn btn-success" %>
    <%= link_to "Volver a productos", products_path, class: "btn btn-danger" %>
  </div>
<% end %>
