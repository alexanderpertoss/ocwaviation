<div class="container">

    <p style="color: green"><%= notice %></p>

    <% content_for :title, "Products" %>

    <h1>Productos</h1>

    <%= link_to "Nuevo producto", new_product_path, class: "btn btn-success" %>
    
    <div id="products table-responsive">
      <table class="table table-striped">
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Precio</th>
          <th>Categoría</th>
          <th colspan="2">Acciones</th>
          <th>Imagenes</th>
        </tr>
        
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td>Bs. <%= product.price %></td>
            <td><%= product.category.name if product.category %></td>
            <td><%= link_to "Editar producto", edit_product_path(product), class: "btn btn-success" %></td>
            <td><%= button_to "Borrar el producto", product, method: :delete, class: "btn btn-danger" %></td>
            <td>
              <% if product.images.attached? %>
                <div class="row">
                  <% product.images.each do |image| %>
                    <div class="col-xs-6 col-md-3">
                      <%= image_tag image, class: "img-responsive", style: "margin-bottom: 10px;" %>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p><em>Sin imágenes</em></p>
              <% end %>
            </td>
          </tr>
        <% end %>
        
      </table>
      
    </div>

    
</div>